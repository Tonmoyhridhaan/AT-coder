#include<bits/stdc++.h>
using namespace std;
#define sf scanf
#define pf printf
#define pb push_back
#define all(a) a.begin(),a.end()
#define i64 long long int
const double pi = 2*acos(0) ;
const int maxn = (i64)2e5+5;
 
int main()
{
    int a,b;
    cin>>a>>b;
    if(b == 1) cout<<"0";
    else if(a == b) cout<<"1";
    else
    {
        int s = 1;
        int cnt = 0;
        while(s<b)
        {
            cnt++;
            s += a-1;
        }
        cout<<cnt;
    }
 
 
return 0;
}
